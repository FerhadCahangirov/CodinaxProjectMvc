@model CourseToolCreateVm

<div class="widget-content multistep-form">
    <fieldset class="field-card">
        <form method="post" enctype="multipart/form-data">
            <div class="add-course-info">
                <div class="add-course-inner-header">
                    <h4>Add Tool</h4>
                </div>
                <div class="add-course-form">
                    <input hidden asp-for="TemplateId"/>
                    <div class="input-block">
                        <label class="add-course-label" asp-for="Content"></label>
                        <input type="text" class="form-control" asp-for="Content">
                        <span class="text-danger" asp-validation-for="Content"></span>
                    </div>
                    <div class="input-block">
                        <label class="add-course-label" asp-for="Icon"></label>
                        <input type="text" class="form-control" asp-for="Icon" type="file" accept="image/*">
                        <span class="text-danger" asp-validation-for="Icon"></span>
                    </div>

                    <div class="widget-btn">
                        <button class="btn btn-info-light next_btn" type="submit">Submit</button>
                    </div>
                </div>
            </div>
        </form>
    </fieldset>
</div>

