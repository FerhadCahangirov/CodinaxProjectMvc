<script>
    document.addEventListener('DOMContentLoaded', function () {
        var calendarEl = document.getElementById('calendar');
        var selectedEvent = null;
        const dateFormatString = "DD/MM/YYYY HH:mm";

        var calendar = new FullCalendar.Calendar(calendarEl, {
            plugins: ['interaction', 'dayGrid', 'timeGrid', 'bootstrap', 'momentTimezone'],
            themeSystem: 'bootstrap',
            bootstrapFontAwesome: {
                prev: 'fa-chevron-circle-left',
                next: 'fa-chevron-circle-right',
                settings: 'fa-gear'
            },
            header: {
                left: 'prev, today, next',
                center: 'title',
                right: 'dayGridMonth, timeGridWeek, settings'

            },
            footer: {
                left: 'prevYear',
                right: 'nextYear'
            },
            customButtons: {
                settings: {
                    click: function () {

                    }
                }
            },
            snapDuration: '00:05:00',
            slotDuration: '00:15:00',
            slotLabelInterval: '00:15:00',
            slotLabelFormat: {
                hour: '2-digit',
                minute: '2-digit',
                meridiemLocation: 'long'
            },
            fixedWeekCount: true,
            showNonCurrentDates: false,
            handleWindowResize: true,
            handleWindowDelay: 100,
            contentHeight: 650,
            defaultView: 'dayGridMonth',
            weekends: true,
            hiddenDays: [0],
            allDaysSlot: false,
            firstDay: 1, //Pazardan baslayacak sekilde 0, 1, 2 ...
            titleFormat: {
                year: 'numeric',
                month: 'short',
            },
            titleRangeSeparator: ' - ',
            columnHeaderFormat: {
                weekday: 'long',
            },
            views: {
                timeGridForFourDay: {
                    type: 'timeGrid',
                    dayCount: 4,
                    buttonText: '4 day'
                }
            },
            eventColor: 'white',
            eventBackgroundColor: 'red',
            eventBorderColor: 'black',
            eventTimeFormat: {
                hour: '2-digit',
                minute: '2-digit',
                meridiemLocation: 'long'
            },
            displayEventTime: true,
            displayEventEnd: true,
            eventOrder: 'title',
            timeZone: 'UTC',
            events: [],
            selectable: true,
            select: (selectionInfo) => {

                selectedEvent = {
                    id: null,
                    start: moment(selectionInfo.start),
                    end: moment(selectionInfo.end),
                    title: "",
                    urlString: "",
                    backgroundColor: "",
                    textColor: "",
                    courseId: "",
                }

                openAddOrUpdateModal();
            },
            eventRender: function (info) {
                var event = info.event;
                var element = info.el;

                var customContent = `
                        <div class="fc-content">
                            <div class="custom-event-content" style="cursor: initial;padding: .6rem;">
                                <small>${moment(event.start).format("HH:mm")} - ${moment(event.end).format("HH:mm")} </small><br/>
                                <a style="color: ${event.textColor};text-decoration: none;" href="${event.extendedProps.urlString}"><strong> ${event.title} </strong></a><br/>
                                <i class="fa-solid fa-eye pointer mt-2"></i>
                            </div>
                        </div>
                        <div class="fc-resizer fc-resizer-start"></div>
                        <div class="fc-resizer fc-resizer-end"></div>
                    `;

                element.innerHTML = customContent;


                var eyeIcon = element.querySelector('.fa-eye');
                console.log(eyeIcon)
                if (eyeIcon) {
                    eyeIcon.addEventListener('click', function () {
                        openDetailModal(info);
                    });
                }
            },
            editable: true,
            eventDrop: (dropEventInfo) => {
                var event = {
                    EventId: dropEventInfo.event.id,
                    CourseId: dropEventInfo.event.extendedProps.courseId,
                    StartDate: dropEventInfo.event.start.toUTCString(),
                    EndDate: dropEventInfo.event.end.toUTCString(),
                    Title: dropEventInfo.event.title,
                    BackgroundColor: dropEventInfo.event.backgroundColor,
                    TextColor: dropEventInfo.event.textColor,
                    Url: dropEventInfo.event.extendedProps.urlString
                };

                saveEvent(event);
            },
            eventResize: (resizeEventInfo) => {
                var event = {
                    EventId: resizeEventInfo.event.id,
                    CourseId: resizeEventInfo.event.extendedProps.courseId,
                    StartDate: resizeEventInfo.event.start.toUTCString(),
                    EndDate: resizeEventInfo.event.end.toUTCString(),
                    Title: resizeEventInfo.event.title,
                    BackgroundColor: resizeEventInfo.event.backgroundColor,
                    TextColor: resizeEventInfo.event.textColor,
                    Url: resizeEventInfo.event.extendedProps.urlString
                };

                saveEvent(event);
            },
        });

        calendar.render();
        getEvents();

        function openAddOrUpdateModal() {

            if (selectedEvent != null) {
                $("#eventId").val(selectedEvent.id);
                $("#inputStartDate").val(moment(selectedEvent.start).format(dateFormatString));
                $("#inputEndDate").val(moment(selectedEvent.end).format(dateFormatString));
                $("#inputTitle").val(selectedEvent.title);
                $("#inputUrl").val(selectedEvent.urlString);
                $("#inputBgColor").val(selectedEvent.backgroundColor);
                $("#inputTxtColor").val(selectedEvent.textColor);
                $("#selectCourseId").val(selectedEvent.courseId);
            }

            $('#saveModal').modal();
        }

        function saveEvent(data) {
            $.ajax({
                type: 'POST',
                url: '/instructor/events/addOrUpdateEvent',
                data: data,
                success: (response) => {
                    if (response.success === true) {
                        $('#saveModal').modal('hide');

                        data.id === ""
                            ? showToaster('success', 'Successfully Added.')
                            : showToaster('success', 'Successfully Updated.');

                        getEvents();
                    }
                    else {
                        showToaster('error', 'Failed action.');
                    }
                },
                error: () => {
                    showToaster('error', 'Failed action.');
                }
            });
        }

        function getEvents() {
            $.ajax({
                type: 'GET',
                url: '/instructor/events/listevents',
                success: (response) => {
                    events = [];
                    var sources = calendar.getEventSources();

                    sources.forEach(source => {
                        source.remove();
                    });

                    for (var i = 0; i < response.length; i++) {
                        events.push({
                            id: response[i].id,
                            title: response[i].title,
                            urlString: response[i].url,
                            start: response[i].startDate,
                            end: response[i].endDate,
                            backgroundColor: response[i].backgroundColor,
                            textColor: response[i].textColor,
                            isBelong: response[i].isBelong,
                            courseId: response[i].courseId,
                        });

                    }

                    console.log(events);
                    calendar.addEventSource(events);
                },
                error: () => {
                    $('#saveModal').modal('hide');
                    showToaster('error', 'Failed.');
                }
            });
        }

        function openDetailModal(info) {

            selectedEvent = {
                id: info.event.id,
                start: info.event.start.toUTCString(),
                end: info.event.end.toUTCString(),
                title: info.event.title,
                textColor: info.event.textColor,
                backgroundColor: info.event.backgroundColor,
                urlString: info.event.extendedProps.urlString,
                courseId: info.event.extendedProps.courseId.toUpperCase(),
                isBelong: info.event.extendedProps.isBelong
            };

            console.log(selectedEvent);

            $('#eventIdDetail').val(info.event.id);
            $('#selectCourseIdDetail').val(info.event.extendedProps.courseId.toUpperCase());
            $('#inputStartDateDetail').val(moment(info.event.start).format('DD/MM/YYYY HH:mm'));
            $('#inputEndDateDetail').val(moment(info.event.end).format('DD/MM/YYYY HH:mm'));
            $('#inputTxtColorDetail').val(info.event.textColor);
            $('#inputBgColorDetail').val(info.event.backgroundColor);
            $('#inputTitleDetail').val(info.event.title);
            $('#inputUrlDetail').val(info.event.extendedProps.urlString);

            const isBelongContent = `
                    <button type="button" class="btn btn-danger" id="btnDelete">Delete</button>
                    <button type="button" class="btn btn-primary" id="btnUpdate">Update</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                `;

            const isNotBelongContent = `
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                `;

            if (selectedEvent.isBelong) {
                console.log($("#detailModal .modal-footer"));
                $("#detailModal .modal-footer").html(isBelongContent);
            }
            else {
                $("#detailModal .modal-footer").html(isNotBelongContent);
            }

            $("#detailModal").modal();

            $("#btnUpdate").click(function () {
                $('#detailModal').modal('hide');
                openAddOrUpdateModal();
            });

            $("#btnDelete").click(function () {
                console.log('click handled');
                $.ajax({
                    type: 'DELETE',
                    url: `/instructor/events/deleteEvent?id=${selectedEvent.id}`,
                    success: (response) => {
                        if (response.success === true) {
                            $('#detailModal').modal('hide');
                            getEvents();
                            showToaster('success', 'Event deleted success.');
                        }
                        else {
                            $('#detailModal').modal('hide');
                            showToaster('error', 'Failed to delete event.');
                        }
                    },
                    error: () => {
                        $('#detailModal').modal('hide');
                        showToaster('error', 'An error occured.');
                    }
                });

            });
        }


        $("#btnSave").click(function () {
            var startDate = parseDate($('#inputStartDate').val());
            var endDate = parseDate($('#inputEndDate').val());

            console.log(startDate, endDate);

            var event = {
                EventId: $('#eventId').val(),
                CourseId: $('#selectCourseId').val(),
                StartDate: startDate.toUTCString(),
                EndDate: endDate.toUTCString(),
                Title: $('#inputTitle').val(),
                BackgroundColor: $('#inputBgColor').val(),
                TextColor: $('#inputTxtColor').val(),
                Url: $('#inputUrl').val()
            };

            console.log(event);

            saveEvent(event);
        });



    });

    function parseDate(dateString) {
        var parts = dateString.split(' ');
        var dateParts = parts[0].split('/');
        var timeParts = parts[1].split(':');

        return new Date(parseInt(dateParts[2]), parseInt(dateParts[1]) - 1, parseInt(dateParts[0]), timeParts[0], timeParts[1]);
    }

    function showToaster(type, content) {
        Command: toastr[type](content);
        toastr.options = {
            "closeButton": false,
            "debug": false,
            "newestOnTop": false,
            "progressBar": false,
            "positionClass": "toast-top-right",
            "preventDuplicates": false,
            "onclick": null,
            "showDuration": "300",
            "hideDuration": "500",
            "timeOut": "1000",
            "extendedTimeOut": "1000",
            "showEasing": "swing",
            "hideEasing": "linear",
            "showMethod": "fadeIn",
            "hideMethod": "fadeOut"
        };
    }
</script>


