                            <div class="why-choose-us-list-wrapper">
                                @if (Model.Features != null && Model.Features.Count() > 0)
                                {
                                    @foreach (var feature in Model.Features)
                                    {
                                        <div class="why-choose-us-item">
                                            <div class="why-choose-us-item-icon-wrapper" style="width: 40px;">
                                                <img src="@Model.BaseUrl/@feature.IconPathOrContainer/@feature.IconName" loading="lazy" width="16" alt="Icon" style="width: 100%;
    display: inline-block;
    height: 40px;
    object-fit: cover;"/>
