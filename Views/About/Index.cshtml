                                            @if(ViewData["Culture"].ToString() == "ru-RU" && !string.IsNullOrEmpty(feature.TitleRu))
                                            {
                                                <p>@feature.TitleRu</p>
                                            }
                                            else if(ViewData["Culture"].ToString() == "tr-TR" && !string.IsNullOrEmpty(feature.TitleTr))
                                            {
                                                <p>@feature.TitleTr</p>
                                            }
                                            else
                                            {
                                                <p>@feature.Title</p>
                                            }
                                        </div>

                                    }
                                }
